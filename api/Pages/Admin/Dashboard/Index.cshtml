@page
@model api.Pages.Admin.Dashboard.IndexModel
@{
    ViewData["Title"] = "Dashboard";
    ViewData["PageTitle"] = "Dashboard";
    Layout = "_Layout";
}

<div class="space-y-6">
    <!-- Stats Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
        <div class="bg-[#1E293B] rounded-xl shadow-md p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-400">Total Orders</p>
                    <p class="text-2xl font-bold text-white">156</p>
                </div>
                <div class="w-12 h-12 bg-[#4CAF50] bg-opacity-20 rounded-lg flex items-center justify-center">
                    <i data-lucide="shopping-cart" class="w-6 h-6 text-[#4CAF50]"></i>
                </div>
            </div>
            <div class="mt-4 flex items-center text-sm">
                <span class="text-[#4CAF50] flex items-center">
                    <i data-lucide="trending-up" class="w-4 h-4 mr-1"></i>
                    +12.5%
                </span>
                <span class="text-gray-400 ml-2">from last month</span>
            </div>
        </div>

        <div class="bg-[#1E293B] rounded-xl shadow-md p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-400">Total Revenue</p>
                    <p class="text-2xl font-bold text-white">$24,563</p>
                </div>
                <div class="w-12 h-12 bg-[#2196F3] bg-opacity-20 rounded-lg flex items-center justify-center">
                    <i data-lucide="dollar-sign" class="w-6 h-6 text-[#2196F3]"></i>
                </div>
            </div>
            <div class="mt-4 flex items-center text-sm">
                <span class="text-[#4CAF50] flex items-center">
                    <i data-lucide="trending-up" class="w-4 h-4 mr-1"></i>
                    +8.2%
                </span>
                <span class="text-gray-400 ml-2">from last month</span>
            </div>
        </div>

        <div class="bg-[#1E293B] rounded-xl shadow-md p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-400">Total Customers</p>
                    <p class="text-2xl font-bold text-white">2,845</p>
                </div>
                <div class="w-12 h-12 bg-[#9C27B0] bg-opacity-20 rounded-lg flex items-center justify-center">
                    <i data-lucide="users" class="w-6 h-6 text-[#9C27B0]"></i>
                </div>
            </div>
            <div class="mt-4 flex items-center text-sm">
                <span class="text-[#4CAF50] flex items-center">
                    <i data-lucide="trending-up" class="w-4 h-4 mr-1"></i>
                    +5.1%
                </span>
                <span class="text-gray-400 ml-2">from last month</span>
            </div>
        </div>

        <div class="bg-[#1E293B] rounded-xl shadow-md p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-400">Total Products</p>
                    <p class="text-2xl font-bold text-white">1,234</p>
                </div>
                <div class="w-12 h-12 bg-[#FF9800] bg-opacity-20 rounded-lg flex items-center justify-center">
                    <i data-lucide="package" class="w-6 h-6 text-[#FF9800]"></i>
                </div>
            </div>
            <div class="mt-4 flex items-center text-sm">
                <span class="text-[#F44336] flex items-center">
                    <i data-lucide="trending-down" class="w-4 h-4 mr-1"></i>
                    -2.3%
                </span>
                <span class="text-gray-400 ml-2">from last month</span>
            </div>
        </div>
    </div>

    <!-- Recent Orders -->
    <div class="bg-[#1E293B] rounded-xl shadow-md overflow-hidden">
        <div class="p-6 border-b border-gray-700">
            <h3 class="text-lg font-semibold text-white">Recent Orders</h3>
        </div>
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead class="bg-gray-800">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Order ID</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Customer</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Products</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Total</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Status</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Date</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-700">
                    <tr class="hover:bg-gray-800 transition-colors">
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-white">#ORD-001</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">John Doe</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">iPhone 13 Pro</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">$999</td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="px-2 py-1 text-xs font-medium rounded-full bg-[#4CAF50] text-white">
                                Completed
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">2024-03-15</td>
                    </tr>
                    <!-- Add more rows as needed -->
                </tbody>
            </table>
        </div>
    </div>
</div>