@page "{id}"
@model api.Pages.Admin.Variants.Delete
@{
    ViewData["Title"] = "Delete Variant";
}

<h1 class="text-2xl font-bold mb-6">Delete Variant</h1>

@if (TempData["ErrorMessage"] != null)
{
    <div class="bg-red-500 text-white px-4 py-3 rounded-lg mb-4">@TempData["ErrorMessage"]</div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="bg-green-500 text-white px-4 py-3 rounded-lg mb-4">@TempData["SuccessMessage"]</div>
}

<div class="bg-[#1E293B] rounded-xl p-6 max-w-xl">
    <p class="mb-6 text-lg">Are you sure you want to delete this variant?</p>
    <form method="post">
        @Html.AntiForgeryToken()
        <div class="flex space-x-2">
            <button type="submit" class="bg-[#F44336] hover:bg-[#D32F2F] text-white px-4 py-2 rounded-lg">Delete</button>
            <a href="@(string.IsNullOrEmpty(Model.ProductId) ? "/Admin/Products/Index" : $"/Admin/Products/Details/{Model.ProductId}")" class="bg-gray-600 hover:bg-gray-500 text-white px-4 py-2 rounded-lg">Cancel</a>
        </div>
    </form>
</div>